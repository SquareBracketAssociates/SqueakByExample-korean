'From Squeak3.9gamma of ''23 July 2006'' [latest update: #7061] on 11 November 2006 at 11:06:58 am'!Morph subclass: #LabelstickerMorph	instanceVariableNames: 'text1 text2 text3 lineColor'	classVariableNames: ''	poolDictionaries: ''	category: 'LesMorph'!!LabelstickerMorph commentStamp: 'HilaireFernandes 10/21/2006 11:57' prior: 0!A label sticker as we can find sticked on text book.!!LabelstickerMorph methodsFor: 'accessing' stamp: 'HilaireFernandes 10/21/2006 11:59'!lineColor	^lineColor! !!LabelstickerMorph methodsFor: 'accessing' stamp: 'HilaireFernandes 10/21/2006 18:14'!lineColor: anObject 	lineColor := anObject.	self changed! !!LabelstickerMorph methodsFor: 'accessing' stamp: 'HilaireFernandes 10/21/2006 11:58'!text1	^text1! !!LabelstickerMorph methodsFor: 'accessing' stamp: 'HilaireFernandes 10/21/2006 20:17'!text1: anObject 	text1 := anObject.	self changed! !!LabelstickerMorph methodsFor: 'accessing' stamp: 'HilaireFernandes 10/21/2006 11:58'!text2	^text2! !!LabelstickerMorph methodsFor: 'accessing' stamp: 'HilaireFernandes 10/21/2006 22:50'!text2: anObject 	text2 := anObject.	self changed! !!LabelstickerMorph methodsFor: 'accessing' stamp: 'HilaireFernandes 10/21/2006 11:58'!text3	^text3! !!LabelstickerMorph methodsFor: 'accessing' stamp: 'HilaireFernandes 10/21/2006 22:50'!text3: anObject 	text3 := anObject.	self changed! !!LabelstickerMorph methodsFor: 'drawing' stamp: 'HilaireFernandes 10/21/2006 20:10'!drawOn: aCanvas 	super drawOn: aCanvas.	self drawOutlineOn: aCanvas.	self drawTextOutlineOn: aCanvas! !!LabelstickerMorph methodsFor: 'drawing' stamp: 'HilaireFernandes 10/21/2006 18:06'!drawOutlineOn: aCanvas 	| outlineRect corner1 corner2 corner3 corner4 myCanvas |	outlineRect := self bounds insetBy: 8.	myCanvas := aCanvas asBalloonCanvas aaLevel: 4.	corner1 := outlineRect bottomLeft.	corner2 := outlineRect bottomRight.	corner3 := outlineRect topRight.	corner4 := outlineRect topLeft.	myCanvas		drawBezierShape: {corner1 - (0 @ 10). corner1. corner1 + (10 @ 0)}		color: Color transparent		borderWidth: 2		borderColor: lineColor;				drawBezierShape: {corner2 - (0 @ 10). corner2. corner2 - (10 @ 0)}		color: Color transparent		borderWidth: 2		borderColor: lineColor;				drawBezierShape: {corner3 - (10 @ 0). corner3. corner3 + (0 @ 10)}		color: Color transparent		borderWidth: 2		borderColor: lineColor;				drawBezierShape: {corner4 + (0 @ 10). corner4. corner4 + (10 @ 0)}		color: Color transparent		borderWidth: 2		borderColor: lineColor;				line: corner1 + (10 @ 0)		to: corner2 - (10 @ 0)		width: 2		color: lineColor;				line: corner2 - (0 @ 10)		to: corner3 + (0 @ 10)		width: 2		color: lineColor;				line: corner3 - (10 @ 0)		to: corner4 + (10 @ 0)		width: 2		color: lineColor;				line: corner4 + (0 @ 10)		to: corner1 - (0 @ 10)		width: 2		color: lineColor! !!LabelstickerMorph methodsFor: 'drawing' stamp: 'HilaireFernandes 10/21/2006 22:48'!drawTextOutlineOn: aCanvas 	| outlineRect offset position textHeight |	outlineRect := self bounds				insetBy: (Rectangle origin: 12 @ 10 corner: 12 @ 18).	offset := outlineRect height // 3.	position := outlineRect bottomLeft.	textHeight := TextStyle defaultFont height.	{text3. text2. text1}		do: [:text | 			aCanvas				line: position				to: position + (outlineRect width @ 0)				width: 1				color: lineColor.			text				ifNotNil: [aCanvas drawString: text at: position - (0 @ textHeight)].			position := position - (0 @ offset)]! !!LabelstickerMorph methodsFor: 'initialization' stamp: 'HilaireFernandes 10/22/2006 15:42'!initialize	super initialize.	self color: Color white;		 extent: 150 @ 80;		 lineColor: Color blue;		 cornerStyle: #rounded;		addDropShadow ;		 shadowOffset: 1 @ 1! !
